!#arg title string
!#arg loggedInUser *hydrocarbon.User

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>{{s title}}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/hydrocarbon.min.css">

</head>
<body>
	<ul id="menu">
		<li><a href="/">Hydrocarbon</a></li>
! if loggedInUser != nil {
	<li class="right"><a href="/settings">{{s loggedInUser.Email}}</a></li>
    <li class="right"><a href="/feeds">Feeds</a></li>
! } else {
    <li class="right"><a href="/login">Login</a></li>
    <li class="right"><a href="/register">Register</a></li>
! }
	</ul>

	<div class="content">
!#include body
	</div>

	<footer>
		(c) 2017 <a rel="nofollow" href="https://github.com/fortytw2/hydrocarbon">[GitHub]</a>[Twitter][Email]
	</footer>
</body>
</html>
